
<div class="container-full d-flex flex-column justify-content-center">
<h1>Administrar Productos</h1>

<button type="button" class="btn btn-primary btn-sm mb-1 " data-bs-toggle="modal" data-bs-target="#addProductModal">Agregar producto</button>


          <table class="table-responsive table table-striped table-bordered" >
           
            <thead>
               <tr>
                  <th scope="col">Codigo</th>
                  <th scope="col">Producto</th>
                  <th scope="col">Descripcion</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Categoria</th>
                  <th scope="col">Stock</th>
                  <th scope="col">Acciones</th>
               </tr>
            </thead>
            <tbody id="tableProductsBody">
               {{#each products}}
               <tr>
                  <th scope="row">{{this.code}}</th>
                  <td>{{this.title}}</td>
                  <td>{{this.description}}</td>
                  <td>{{this.price}}</td>
                  <td>{{this.category}}</td>
                  <td>{{this.stock}}</td>
                  <td>  <button type="button" class="btn btn-warning w-100 mb-1" >Modificar</button>
                        <button type="button" class="btn btn-danger w-100 mb-1">Eliminar</button>
                   </td>
               </tr>
                  {{/each}}
          </table>
   </div>
   <!-- Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered bg-danger"  style="width: 200rem;">
    <div class="modal-content" >
      <div class="modal-header">
        <h5 class="modal-title" id="addProductModalLabel">Agregar Producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <div class="container-fluid">
      <form id="AddProductForm" enctype="multipart/form-data">
      <div class="row p-0 bg-danger">
         <div class="col mb-3">
            <label for="title" class="form-label">Producto</label>
            <input type="text" name="title"  class="form-control" id="title" placeholder="ingrese el nombre del producto.">
         </div>
         <div class="col mb-3">
            <label for="title" class="form-label">Descripción</label>
            <input type="text" name="description"  class="form-control" id="description" placeholder="ingrese la descripción">
         </div>
         <div class="col mb-3">
            <label for="code" class="form-label">Código</label>
            <input type="text" name="code"  class="form-control" id="code" placeholder="ingrese el código">
         </div>
      </div>     
      <div class="row">
         <div class="col-6 mb-3">
            <label for="category" class="form-label">Categoría</label>
            <input type="text" name="category"  class="form-control" id="category" placeholder="ingrese categoría del producto">
         </div>
         <div class="col-3 mb-3">
            <label for="stock" class="form-label">Stock</label>
            <input type="number" name="stock"  class="form-control" id="stock" placeholder="ingrese stock del producto">
         </div>
         <div class="col-3 mb-3">
            <label for="price" class="form-label">Precio</label>
            <input type="number" name="price"  class="form-control" id="price" placeholder="ingrese el precio del producto">
         </div>
      </div>  

