      <form id="AddProductForm" action="/update/:code"  method="PUT">
      <div class="row p-0 ">
         <div class="col mb-3">
            <label for="title" class="form-label">Producto</label>
            <input type="text" name="title"  class="form-control" id="title" placeholder="ingrese el nombre." value="{{title}}">
         </div>
         <div class="col mb-3">
            <label for="title" class="form-label">Descripción</label>
            <input type="text" name="description"  class="form-control" id="description" placeholder="ingrese descripción"  value="{{description}}">
         </div>
         <div class="col mb-3">
